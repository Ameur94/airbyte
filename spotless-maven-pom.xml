<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>io.airbyte</groupId>
    <artifactId>airbyte-spotless-format-dummy-maven-project</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>airbyte-spotless-format-dummy-maven-project</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>17</java.version>
    </properties>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>com.diffplug.spotless</groupId>
                    <artifactId>spotless-maven-plugin</artifactId>
                    <version>2.43.0</version>
                    <configuration>
                        <java>
                            <includes>
                                <include>**/*.java</include>
                            </includes>
                            <importOrder />
                            <eclipse>
                                <version>4.21</version>
                                <file>tools/gradle/codestyle/java-google-style.xml</file>
                            </eclipse>
                            <removeUnusedImports />
                            <trimTrailingWhitespace />
                            <endWithNewline />
                        </java>
                        <groovy>
                            <includes>
                                <include>**/*.gradle</include>
                            </includes>
                            <importOrder />
                            <removeSemicolons />
                            <trimTrailingWhitespace />
                            <endWithNewline />
                        </groovy>
                        <kotlin>
                            <includes>
                                <include>**/*.kt</include>
                            </includes>
                            <ktlint>
                                <version>1.2.1</version>
                                <editorConfigOverride>
                                    <!-- the configuration below can't be automatically fixed when running ktlint from maven. As such, we disable those errors-->
                                    <ktlint_standard_package-name>disabled</ktlint_standard_package-name>
                                    <ktlint_standard_no-wildcard-imports>disabled</ktlint_standard_no-wildcard-imports>
                                    <ktlint_standard_property-naming>disabled</ktlint_standard_property-naming>
                                    <ktlint_standard_function-naming>disabled</ktlint_standard_function-naming>
                                    <ktlint_standard_backing-property-naming>disabled</ktlint_standard_backing-property-naming>
                                    <ktlint_standard_filename>disabled</ktlint_standard_filename>
                                    <ktlint_standard_no-consecutive-comments>disabled</ktlint_standard_no-consecutive-comments>
                                    <ktlint_standard_parameter-list-wrapping>disabled</ktlint_standard_parameter-list-wrapping>
                                    <ktlint_standard_enum-entry-name-case>disabled</ktlint_standard_enum-entry-name-case>
                                    <ij_kotlin_allow_trailing_comma>true</ij_kotlin_allow_trailing_comma>
                                    <ij_kotlin_allow_trailing_comma_on_call_site>true</ij_kotlin_allow_trailing_comma_on_call_site>
                                    <!-- This is a weird one. We set it too 100 in the .editorconfig, and ktfmt below will also limit line size-->
                                    <max_line_length>9999</max_line_length>
                                </editorConfigOverride>
                            </ktlint>
                            <ktfmt>
                                <version>0.39</version>
                                <style>KOTLINLANG</style>
                            </ktfmt>
                        </kotlin>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>
