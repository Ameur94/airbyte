{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Portfolio Memberships Schema",
  "additionalProperties": true,
  "type": ["object", "null"],
  "properties": {
    "gid": {
      "description": "Unique identifier for the memberships data",
      "type": ["string", "null"]
    },
    "resource_type": {
      "description": "Type of resource this membership belongs to",
      "type": ["string", "null"]
    },
    "portfolio": {
      "description": "The portfolio information associated with the membership.",
      "type": ["object", "null"],
      "properties": {
        "gid": {
          "description": "Unique identifier for the portfolio",
          "type": ["string", "null"]
        },
        "resource_type": {
          "description": "Type of the resource (e.g., project, task) that the portfolio belongs to",
          "type": ["string", "null"]
        },
        "name": {
          "description": "Name of the portfolio",
          "type": ["string", "null"]
        }
      }
    },
    "user": {
      "description": "The user information linked to the membership.",
      "type": ["object", "null"],
      "properties": {
        "gid": {
          "description": "Unique identifier for the user",
          "type": ["string", "null"]
        },
        "resource_type": {
          "description": "Type of the resource (e.g., team, user) that the user belongs to",
          "type": ["string", "null"]
        },
        "name": {
          "description": "Name of the user",
          "type": ["string", "null"]
        }
      }
    }
  }
}
