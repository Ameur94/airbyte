{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "description": "Unique identifier for the customer",
      "type": ["null", "string"]
    },
    "name": {
      "description": "Name of the customer",
      "type": ["null", "string"]
    },
    "signup_date": {
      "description": "Date and time when the customer signed up",
      "type": ["null", "string"],
      "format": "date-time"
    }
  }
}
